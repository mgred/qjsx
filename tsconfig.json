{
  "compilerOptions": {
    "moduleResolution": "Node",
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "ES2020",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "types": ["@quickts/types"],
    "paths": {
      "@quickts/io": ["packages/io"],
      "@quickts/web": ["packages/web"]
    },
    "rootDirs": [
      ".",
      "bazel-out/darwin_arm64-fastbuild/bin",
      "bazel-out/darwin-dbg/bin",
      "bazel-out/darwin-fastbuild/bin",
      "bazel-out/darwin-opt-exec-2B5CBBC6/bin",
      "bazel-out/k8-dbg/bin",
      "bazel-out/k8-fastbuild/bin",
      "bazel-out/k8-opt-exec-2B5CBBC6/bin",
      "bazel-out/x64_windows-dbg/bin",
      "bazel-out/x64_windows-fastbuild/bin",
      "bazel-out/x64_windows-opt-exec-2B5CBBC6/bin"
    ]
  },
  "references": [{ "path": "./tsconfig.test.json" }],
  "include": ["packages/**/*.ts"],
  "exclude": ["external/*"]
}
